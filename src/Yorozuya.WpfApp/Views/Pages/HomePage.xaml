<Page
    x:Class="Yorozuya.WpfApp.Views.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Yorozuya.WpfApp.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:localViewModel="clr-namespace:Yorozuya.WpfApp.ViewModels.Pages"
    d:DataContext="{d:DesignInstance local:HomePage}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid d:Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="0"
                  Margin="10"
                  ItemsSource="{Binding Path=ViewModel.FieldSource.View}"
                  IsSynchronizedWithCurrentItem="True"
                  SelectedItem="{Binding Path=ViewModel.NowSelectedField}"
                  SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Padding="5,10" Style="{StaticResource DynamicForegroundTextBlock}" FontSize="{StaticResource LargeFontSize}" Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock d:Text="文文可爱捏"  Grid.Column="0" Text="{Binding Path=ViewModel.NowSelectedField}" TextAlignment="Center" FontWeight="Bold" FontSize="{StaticResource LargeFontSize}" Style="{StaticResource DynamicForegroundTextBlock}" />
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button ToolTip="发布一个新问题" Icon="Add28" Style="{StaticResource BorderlessTransparentUiButtonStyle}"/>
                    <ui:Button ToolTip="刷新" Margin="5, 0, 0, 0" Icon="ArrowClockwise28" Command="{Binding Path=ViewModel.RefreshPostsCommand}"/>
                </StackPanel>
            </Grid>
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl IsEnabled="{Binding Path=ViewModel.IsNotRefreshing}" Grid.Row="1" ItemsSource="{Binding Path=ViewModel.PostSource}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardAction Margin="5" Command="{Binding Path=OpenPostCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="{Binding Path=Post.Title}" TextTrimming="WordEllipsis" TextWrapping="NoWrap" FontSize="{StaticResource LargeFontSize}"/>
                                <TextBlock MaxHeight="75" Grid.Row="1" Text="{Binding Path=Post.Content}" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" FontSize="{StaticResource MediumFontSize}"/>
                                <TextBlock Grid.Row="2" Margin="0,5,0,0" FontSize="{StaticResource SmallFontSize}">
                                    <Run Text="浏览数：" />
                                    <Run Text="{Binding Path=Post.Views}"/>
                                </TextBlock>
                            </Grid>
                        </ui:CardAction>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
